import java.util.*;
public class Palavra {
	private static Map<String, Integer> contador = new HashMap<String, Integer>();
	public void contarPalavras(String msg) {
		String[] palavras = msg.split("\\s+");
        for (int i = 0; i < palavras.length; i++) {
            palavras[i] = palavras[i].toLowerCase();
            palavras[i] = palavras[i].replaceAll("[^a-zA-Z0-9_-]", "");
            if(palavras[i] != ""){
            	int valor = contador.get(palavras[i]);
            	contador.put(palavras[i], valor++);
            }
        }
	}
	
	public void imprimirPalavras(String msg){
		Iterator it = contador.entrySet().iterator();
        while (it.hasNext()) {
        	System.out.println(it.next());
        }
	}
}